datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Account {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  projects    Project[]
  updatedAt   DateTime  @updatedAt
}

model Project {
  account      Account          @relation(fields: [accountId], references: [id])
  accountId    String
  createdAt    DateTime         @default(now())
  description  String?
  environments Environment[]
  flag         FlagDefinition[]
  id           String           @id @default(cuid())
  name         String?
  updatedAt    DateTime         @updatedAt
}

model Environment {
  createdAt         DateTime            @default(now())
  description       String?
  flagConfiguration FlagConfiguration[]
  id                String              @id @default(cuid())
  name              String?
  project           Project             @relation(fields: [projectId], references: [id])
  projectId         String
  updatedAt         DateTime            @updatedAt
}

model FlagDefinition {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  key       String?
  projects  Project[]
  updatedAt DateTime  @updatedAt
  variants  Json?
}

model FlagConfiguration {
  createdAt    DateTime      @default(now())
  environments Environment[]
  id           String        @id @default(cuid())
  updatedAt    DateTime      @updatedAt
}